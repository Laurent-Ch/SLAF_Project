<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="profile__title profile__title--bg-color-1">
  <h2 class="center">Se connecter</h2>
</div>
<div class="form">
  <div class="form__content center">
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__control", placeholder: 'Email' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", class: "form__control", placeholder: 'Mot de passe' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form__button">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, style: "font-weight: bold;" %>
      </div>
    <% end %>

    <div class="right form__button">
      <%= f.submit "Se connecter", class: 'button__normal button__info' %>
    </div>
    <div class="form__links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<% end %>
