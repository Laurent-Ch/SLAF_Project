
  <div class="profile__content">
    <div class="profile__info">
      <div class="profile-info-text col-5">
        <div class= "profile-info-text-elt">
          <div><%= @user.alias%> </div>
        </div>
        <div class= "profile-info-text-elt">      
          <div><%= @user.first_name%> </div>
        </div>
        <div class= "profile-info-text-elt">
          <div><%= @user.last_name%> </div>
        </div>
        <div class= "profile-info-text-elt">
          <div><%= @user.email%> </div>
        </div>
      </div>
      <div class="profile-info-pic col-7">
      <div class='avatar'>
        <%if @user.avatar.attached?%>
          <%= image_tag @user.avatar, class: 'pic-avatar'%>
        <%else%>
          <p>Il n'y a pas encore d'avatar lié à cet utilisateur</p>
        <%end%>
      </div>
        <div class='form-picture'>
        <%= form_tag user_avatars_path(@user), multipart: true do %>
          <%= file_field_tag :avatar %>
          <%= submit_tag "Éditer l'avatar", class: 'button__normal button__info' %>
        <% end %>
      </div>
    </div>
  </div>