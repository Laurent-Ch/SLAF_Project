<% @idioms.each do |idiom| %>
<div class="card">
        <% if idiom.validated == false %>
        <p><span class='status-tag-error'>En cours de validation</span></p>
        <%else%>
        <p><span class='status-tag-success'>Validée</span></p>
        <%end%>
    <div class="card__title">
        <span class="card__title--first"><%= idiom.title_en.capitalize %></span><%= idiom.grammatical_type.capitalize[0..2] %>.<br>
    </div>
    <div class="card__body">
        <span >Traduction</span> : <%= idiom.title_fr.capitalize %><br>
        <span >Définition</span> : <%=idiom.body%>
    </div>
    <div class="card__bottom">
        <div class="card__row">
            <%= idiom.likes.count %>
            <%= render partial: "svgs/liketwo.html.erb" %>
            </svg> <%= idiom.unlikes.count %>
            <%= render partial: "svgs/unliketwo.html.erb" %>
        </div>
        <div class="card__row">
            <%= link_to "VOIR", idiom_path(idiom.id), class: 'button__normal button__info' %>
        </div>
    </div>
</div>
<%end%>
