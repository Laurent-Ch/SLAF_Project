<%= form_with model: @idiom, url: edit_idiom_path(@idiom.id), method: :patch, local: true do |f|%>
<div class="profile__title profile__title--bg-color-1">
  <h2 class="center">Éditer mon expression</h2>
</div>
<div class="form" style="height: 88vh;">
  <div class="form__content center">
    <div class="field">
    <%= f.text_field :title_en, autofocus: true, autocomplete: "title_en", class: "form__control" %>
    </div>

    <div class="field">
    <%= f.text_field :title_fr, autofocus: true, autocomplete: "title_fr", class: "form__control" %>
    </div>

    <div class="field">
    <%= f.text_field :body, autofocus: true, autocomplete: "body", class: "form__control" %>
    </div>

    <div class="field">
    <%= f.text_field :example, autofocus: true, autocomplete: "example", class: "form__control" %>
    </div>

  <div class="row">
    <div class="col-3">
      <%= f.label :grammatical_type, "Verbe" %>
      <%= f.radio_button :grammatical_type, "Verbe" %>
    </div>
    <div class="col-3">
      <%= f.label :grammatical_type, "Adverbe" %>
      <%= f.radio_button :grammatical_type, "Adverbe" %>
    </div>
    <div class="col-3">
      <%= f.label :grammatical_type, "Adjectif" %>
      <%= f.radio_button :grammatical_type, "Adjectif" %>
    </div>
    <div class="col-3">
      <%= f.label :grammatical_type, "Nom" %>
      <%= f.radio_button :grammatical_type, "Nom" %>
    </div>
    </div>

    <div class="right form__button">
      <%= f.submit "Mettre à jour", class: 'button__normal button__info' %>
    </div>
  <% end %>