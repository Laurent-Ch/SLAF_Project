<%= form_for(:idioms, url:(idioms_path), action: "create", method: :post) do |f| %>
<div class="form">
  <div class="form__content center" style="width: 33vw;">
    <div>
      <%= f.text_area :title_en, autofocus: true, autocomplete: "title_en", class: "form__control", placeholder: 'Mot en franglais' %>
    </div>
    <div>
      <%= f.text_area :title_fr, autofocus: true, autocomplete: "title_fr", class: "form__control", placeholder: 'Mot en beau franÃ§ais' %>
    </div>
    <div>
      <%= f.text_area :body, autofocus: true, autocomplete: "body", class: "form__control", placeholder: 'Ton explication' %>
    </div>
    <div>
      <%= f.text_area :example, autofocus: true, autocomplete: "example", class: "form__control", placeholder: "Exemples d'utilisation" %>
    </div>
    <div class="row">
    <div class="col-3">
      <%= f.label :grammatical_type, "Verbe" %>
      <%= f.radio_button :grammatical_type, "Verbe" %>
    </div>
    <div class="col-3">
      <%= f.label :grammatical_type, "Adverbe" %>
      <%= f.radio_button :grammatical_type, "Adverbe" %>
    </div>
    <div class="col-3">
      <%= f.label :grammatical_type, "Adjectif" %>
      <%= f.radio_button :grammatical_type, "Adjectif" %>
    </div>
    <div class="col-3">
      <%= f.label :grammatical_type, "Nom" %>
      <%= f.radio_button :grammatical_type, "Nom" %>
    </div>
    </div>
    <div class="right form__button">
      <%= f.submit "Soumettre", class: 'button__normal button__info' %>
    </div>
</div>
</div>
<% end %>