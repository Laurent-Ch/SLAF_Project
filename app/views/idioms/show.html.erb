<div class="card">
    <div class="center show__title">
        <h1><b><%= @idiom.title_fr %></b><span>&nbsp;&nbsp;<%= @idiom.grammatical_type.capitalize[0..2] %>.</span><br><%= @idiom.title_en %></h1><span><%= social_share_button_tag("S.L.A.F") %></span>
    </div>
    <div>
        <p><span style="font-weight: bold;">Définition:</span> <%= @idiom.body %><p>
        <%= @idiom.example %>
    </div>
    <div class="card__bottom">
        <div>
            <%= render 'like' if current_user != nil %>
            <%= render 'unlike' if current_user != nil %>
        </div>
        <div>
            <span>Une expression proposée par <b><%= @idiom.user.alias %></b></span>
        </div>
    </div>
</div> 

<%= render 'comments_list' if @idiom.comments.length > 0 %>
<%= render 'comments_form' if current_user != nil %>
