<div class="navbar" id="burger__menu">
  <div class="navbar__top">
      <%= link_to idioms_path, class: 'navbar__top--logo', id: 'menu__logo'  do %>
        <%= image_tag "/logoslaf.png", id: "navbar__logo" %>
      <% end %>
      <div class="navbar__mobile--close" id="burger__button2">
        <%= render partial: "svgs/burger.html.erb" %>
      </div>
      <ul class="list__unstyled">
        <%= link_to "CRÉER UNE EXPRESSION", new_idiom_path, class: 'button__letter button__info', style: "margin-bottom: 15px;" %>

        <%= form_for "", url: idioms_path, role: "search", method: :get do%>
        <%= text_field_tag :search, @search, placeholder: "Rechercher", class: 'search__form--control'%>
        <%= button_tag(type: "submit", class: "button__search button__danger") do %>
          <%= render partial: "svgs/search.html.erb" %>
        <% end %>
        <% end%>
      <div class="navbar-browse">
        <span id="browse__button">Parcourir&nbsp;
        <%= render partial: "svgs/browse.html.erb" %>
        </span>
        <div class="row" id="letter__tags">
            <% @letters.first(6).each do |letter| %>
            <div class="col-2">
              <%= link_to letter, idioms_path(:search => letter), class: 'button__letter button__info' %>
            </div>
            <% end %>
            <div class="display__numbers" id="browse__list">
            <% @letters.last(20).each do |letter| %>
            <div class="col-2">
              <%= link_to letter, idioms_path(:search => letter), class: 'button__letter button__info' %>
            </div>
            <% end %>
            </div>
        </div>
      </div>
      <div class="navbar__buttons">
        <%= render 'application/random' %>
        <%= link_to "FLORILÈGE", idioms_path(:search => "top"), class: 'button__large button__success' %>
      </div>
    </div>
    <div class="navbar__bottom">
      <div class="navbar__bottom--left">
        <ul class="list__unstyled">
          <li><%= link_to "Accueil", root_path, class: 'nav-link' %></li>
          <% if user_signed_in? %>
            <li><%= link_to "Profil", user_path(current_user.id), class: 'nav-link' %></li>
            <li><%= link_to "Se déconnecter", destroy_user_session_path, :method => :delete, class: 'nav-link' %></li>
            <%if current_user.admin == true%>
              <li><%=link_to "Panneau d'administration", admin_index_path, class: 'nav-link'%></li>
            <%end%>
          <% else %>
            <li><%= link_to "S'inscrire", new_user_registration_path, class: 'nav-link' %></li>
            <li><%= link_to "Se connecter", new_user_session_path, class: 'nav-link' %></li>
            <% end %>
        </ul>
      </div>
      <div class="navbar__logo">
        <div class="">

        <%= link_to "mailto:contact@syndicatdelutteantifranglais.club" do %>
          <%= render partial: "svgs/mail.html.erb" %>
        <% end %>
        <%= link_to "https://github.com/SLAF-Project/SLAF_Project" do %>
          <%= render partial: "svgs/github.html.erb" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>