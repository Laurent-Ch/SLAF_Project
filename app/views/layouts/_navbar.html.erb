
<div class="navbar">
  <div class="navbar__top">
      <a href="/"><span style="font-size: 48px;">LOGO</span></a>
      <ul class="list__unstyled">
        <%= form_for "", html: {class: 'search__form'}, url: idioms_path, role: "search", method: :get do%>
        <%= text_field_tag :search, @search, placeholder: "Rechercher", class: 'search__form--control'%>
        <%= button_tag(type: "submit", class: "button__search button__danger") do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
              <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
            </svg>
        <% end %>
        <% end%>
      </ul>
      <div class="navbar-browse" style="font-size: 22px; font-weight: bold;">
        <span>Parcourir</span>
        <div class="row">
            <% @letters.each do |letter| %>
            <div class="col-2">
              <%= link_to letter, idioms_path(:search => letter), class: 'button__letter button__info' %>
            </div>
            <% end %>
        </div>
      </div>
      <div class="navbar__buttons">
        <%= render 'application/random' %>
        <%= link_to "FILTRER", idioms_path(:search => "top"), class: 'button__large button__success' %>
      </div>
    </div>
    <div class="navbar__bottom">
      <ul class="list__unstyled">
        <li><%= link_to "Accueil", root_path, class: 'nav-link' %></li>
        <% if user_signed_in? %>
          <li><%= link_to "Profil", user_path(current_user.id), class: 'nav-link' %></li>
          <li><%= link_to "Se dÃ©connecter", destroy_user_session_path, :method => :delete, class: 'nav-link' %></li>
          <%if current_user.admin == true%>
            <li><%=link_to 'Admin dashboard', admin_index_path, class: 'nav-link'%></li>
          <%end%>
        <% else %>
          <li><%= link_to "S'inscrire", new_user_registration_path, class: 'nav-link' %></li>
          <li><%= link_to "Se connecter", new_user_session_path, class: 'nav-link' %></li>
        <% end %>
      </ul>
    </div>
</div>