<div class="container">
    <h1>Tableau de bord Admininistrateur</h1>
    <%= link_to "Retourner à l'accueil", idioms_path, class: "button__normal button__success" %>
    <br>
    <h4><%= @users.all.count %> utilisateurs crées</h4>
    <%= link_to 'Gérer tous les utilisateurs', admin_user_index_path, class: "button__normal button__info" %>
    <hr>
    <h4><%= @idioms.all.count%> expressions proposées</h4>
    <h5><%= @idioms.where(validated: true).count%> validées || <%= @idioms.where(validated: false).count%> en cours de validation</h5>
    <%= link_to 'Gérer toutes les expressions', admin_idiom_index_path, class: "button__normal button__info" %>
    <hr>
    <h4><%= @comments.all.count %> commentaires crées</h4>
    <%= link_to 'Gérer tous les commentaires', admin_comment_index_path, class: "button__normal button__info" %>
</div>