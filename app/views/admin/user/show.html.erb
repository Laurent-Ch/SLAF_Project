<div class="profile__title profile__title--bg-color-1">
<h1>Utilisateur <%= @user.id %></h1>
  <%= link_to "Supprimer", admin_user_path(@user.id), :method => 'DELETE', :data => {:confirm => 'Tu confirmes vouloir supprimer ce profil ?'} , class: 'button__normal button__danger' %>
  <%if @user.admin == false%>
  <%= link_to 'Promouvoir Admin', admin_user_path(@user.id, submit: 'true'), :method => 'PUT', :data => {:confirm => "Confirmes tu passer cet utilisateur au rang d'admin ?" }, class: 'button__normal button__success'%>
  <%else%>
  <%= link_to "Retirer le rang d'admin", admin_user_path(@user.id, submit: 'false'), :method => 'PUT', :data => {:confirm => "Confirmes tu supprimer les droits d'administrateur Ã  cet utilisateur ?" }, class: 'button__normal button__danger'%>
  <%end%>
  <%= link_to "Retour", admin_user_index_path, class: 'button__normal button__info' %>
  </div>
<%= render 'users/profile' %>
